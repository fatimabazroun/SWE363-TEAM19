  <script>
    function togglePassword(id, toggleEl) {
      const input = document.getElementById(id);
      if (input.type === 'password') {
        input.type = 'text';
        toggleEl.innerText = 'Hide';
      } else {
        input.type = 'password';
        toggleEl.innerText = 'Show';
      }
    }
  </script>
