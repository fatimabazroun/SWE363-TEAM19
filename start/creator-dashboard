  <script src="https://unpkg.com/lucide@latest"></script>
  <script>
    lucide.createIcons();

    const conversations = {
      Bessie: [
        { from: 'them', text: 'Hi, Robert. Iâ€™m facing some challenges in writing a story. Can you help?' },
        { from: 'me', text: 'Hi Bessie ðŸ‘‹ I\'d be glad to help. Can you tell me more about the challenges?' }
      ],
      Thomas: [
        { from: 'them', text: 'I have a job interview coming up and Iâ€™m nervous.' },
        { from: 'me', text: 'Youâ€™ll do great! Do you want to practice some questions?' }
      ],
      Daniel: [
        { from: 'them', text: 'Not much, just planning to relax this weekend. You?' },
        { from: 'me', text: 'Same here. We all need a break sometimes.' }
      ],
      Ronald: [
        { from: 'them', text: 'Iâ€™m stuck on this bug in the code. Itâ€™s driving me crazy.' },
        { from: 'me', text: 'Tell me what the bug is doing, maybe I can help?' }
      ]
    };

    let currentFriend = 'Bessie';

    function loadChat(name, el) {
      currentFriend = name;
      document.getElementById('chatTitle').innerText = `Chat with ${name}`;
      const chatBox = document.getElementById('chatMessages');
      chatBox.innerHTML = '';
      conversations[name].forEach(msg => {
        const div = document.createElement('div');
        div.className = `message from-${msg.from}`;
        div.innerText = msg.text;
        chatBox.appendChild(div);
      });

      document.querySelectorAll('#friendList li').forEach(li => li.classList.remove('active'));
      if (el) el.classList.add('active');
    }

    function sendMessage() {
      const input = document.getElementById('messageInput');
      const message = input.value.trim();
      if (!message) return;

      const chatBox = document.getElementById('chatMessages');
      conversations[currentFriend].push({ from: 'me', text: message });

      const div = document.createElement('div');
      div.className = 'message from-me';
      div.innerText = message;
      chatBox.appendChild(div);

      input.value = '';
      chatBox.scrollTop = chatBox.scrollHeight;
    }

    function showFavorites() {
      document.getElementById('chatSection').style.display = 'none';
      document.getElementById('friendList').style.display = 'none';
      document.getElementById('followersSection').style.display = 'none';
      document.getElementById('favoritesSection').style.display = 'block';
    }

    function showFollowers() {
      document.getElementById('chatSection').style.display = 'none';
      document.getElementById('friendList').style.display = 'none';
      document.getElementById('favoritesSection').style.display = 'none';
      document.getElementById('followersSection').style.display = 'block';
    }

    function showMessages() {
      document.getElementById('chatSection').style.display = 'flex';
      document.getElementById('friendList').style.display = 'block';
      document.getElementById('favoritesSection').style.display = 'none';
      document.getElementById('followersSection').style.display = 'none';
      loadChat(currentFriend); // Refresh chat
    }
  </script>
